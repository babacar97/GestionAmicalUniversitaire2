{% extends "admin/base.html.twig" %}
{% block body %}
	<div id="wrapper">
		<div class="container-fluid">
			<a href="{{path('app_register')}}" class="btn btn-primary mb-4 ">Ajouter un nouveau evenement</a>
			<div class="card shadow mb-4">
				<div class="card-header py-3">
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-bordered" id="dataTable"></thead>
							<tr>
								<th>Titre</th>
								<th>Date debut</th>
								<th>Date fin</th>
								<th>Details</th>
								<th>Description</th>
								<th>modifier</th>
								<th>Supprimer</th>
							</tr>
						</thead>
						<tbody>
							{% for calendar in calendars %}
								<tr>
									<td>{{ calendar.id }}</td>
									<td>{{ calendar.title }}</td>
									<td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
									<td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
									<td>{{ calendar.description }}</td>

									<td>
										<a href="{{ path('app_calendar_show', {'id': calendar.id}) }}">show</a>
										<a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="9">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div></div></div>{% endblock %}
