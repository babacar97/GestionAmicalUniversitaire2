{% extends 'admin/base.html.twig' %}

{% block title %}liste utilisateur
{% endblock %}

{% block body %}

	<div id="wrapper">
		<div
			class="container-fluid">

			<!-- Page Heading -->
			<h1 class="h3 mb-2 text-gray-800">Tables</h1>
			<a href="{{path('app_register')}}" class="btn btn-primary mb-4 ">Ajouter un nouveau membre</a>

			<!-- DataTales Example -->
			<div class="card shadow mb-4">
				<div class="card-header py-3">
					<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTable">
							<thead>
								<tr>
									<th>Nom</th>
									<th>Prenom</th>
									<th>Email</th>
									<th>Adresse</th>
									<th>NumeroCarteIdentite</th>
									<th>NumeroCarteEtudiant</th>
									<th>NiveauEtude</th>
									<th>Faculte</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								{% for user in users %}
									<tr>
										<td>{{user.nom}}</td>
										<td>{{user.prenom}}</td>
										<td>{{user.email}}</td>
										<td>{{user.adresse}}</td>
										<td>{{user.numeroCarteIdentite}}</td>
										<td>{{user.numeroCarteEtudiant}}</td>
										<td>{{user.niveauEtude}}</td>
										<td>{{user.faculte}}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
